<div id="header" class="container-fluid text-center">
  <h1>Burgie's Top Picks!</h1>
  <img class="img-fluid" id="burgie" src="/images/burgie.jpg" alt="burger">
</div>


<div class="container-fluid">
  <div class="row text-center">
    <div class="col-md-6" id="div1">
      <h2>Burgers that are ready to eat!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6" id="div2">
      <h2>Burgers that have been devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/devoured-block}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div id="form" class="container-fluid text-center">
  <h2>Create Your Own</h2>

  <form class="create-form">

    <div class="form-group">
      <label for="burger_name">Burger Name:</label>
      <input type="text" id="burg" name="name">
    </div>
  <button class="btn btn-primary" type="submit">Add Burger</button>
  </form>
</div>

